// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "ctrl-o": "workspace::ActivatePreviousPane"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-w": "editor::Copy",
      "alt-x": "command_palette::Toggle",
      "ctrl-/": "editor::Undo",
      "ctrl-a": "editor::MoveToBeginningOfLine",
      "ctrl-alt-_": "editor::Redo",
      "ctrl-e": "editor::MoveToEndOfLine",
      "ctrl-g": "editor::Cancel",
      "ctrl-k": "editor::CutToEndOfLine",
      "ctrl-r": "buffer_search::Deploy",
      "ctrl-s": "buffer_search::Deploy",
      "ctrl-w": "editor::Cut",
      "ctrl-x ctrl-f": "file_finder::Toggle",
      "ctrl-x ctrl-s": "workspace::Save",
      "ctrl-x h": "editor::SelectAll",
      "alt-g g": "go_to_line::Toggle",
      "alt-;": [
        "editor::ToggleComments",
        {
          "advance_downwards": false
        }
      ]
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-x 0": "pane::CloseActiveItem",
      "ctrl-x 1": "workspace::ToggleZoom",
      "ctrl-x 2": "pane::SplitDown",
      "ctrl-x 3": "pane::SplitRight"
    }
  }
]
