# ~/.ncmpcpp/bindings
#
# Custom key bindings for ncmpcpp

# Vim-like movement.
def_key "k"
  scroll_up

def_key "j"
  scroll_down

def_key "l"
  next_column

def_key "h"
  previous_column

# Default is bound to `l` but that has been clobbered by Vim movement
# override. `;` chosen as it is one of the few keys not taken by the
# default bindings and it is right next to the default `l` on a standard
# QWERTY keyboard.
def_key ";"
  show_lyrics

