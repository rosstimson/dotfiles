#!/usr/bin/env bash

set -euo pipefail


function push() {
  aws --profile notes \
      --region eu-west-1 \
      s3 sync --delete --sse --storage-class INTELLIGENT_TIERING ~/Documents/notes s3://notes-rosstimson
}


function pull() {
  aws --profile notes \
      --region eu-west-1 \
      s3 sync s3://notes-rosstimson ~/Documents/notes
}


# Default to pull if no arguments given
case ${1:-pull} in
    push)
        push
        ;;
    pull)
        pull
        ;;
    *)
        echo "Invalid argument. Usage: $0 [push|pull]"
        exit 1
        ;;
esac

exit 0
